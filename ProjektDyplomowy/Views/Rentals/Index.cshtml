@model IEnumerable<ProjektDyplomowy.Models.Rental>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Yacht)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WithSkipper)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SailingLicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RadioOperatorLicense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LicenseValidUntil)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yacht.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WithSkipper)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SailingLicenseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RadioOperatorLicense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicenseValidUntil)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
