@model ProjektDyplomowy.Models.Rental

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Rental</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClientId" class="control-label"></label>
                <select asp-for="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
            </div>
            <div class="form-group">
                <label asp-for="YachtId" class="control-label"></label>
                <select asp-for="YachtId" class ="form-control" asp-items="ViewBag.YachtId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RentalStart" class="control-label"></label>
                <input asp-for="RentalStart" class="form-control" />
                <span asp-validation-for="RentalStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentalEnd" class="control-label"></label>
                <input asp-for="RentalEnd" class="form-control" />
                <span asp-validation-for="RentalEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="WithSkipper" /> @Html.DisplayNameFor(model => model.WithSkipper)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="SailingLicenseNumber" class="control-label"></label>
                <input asp-for="SailingLicenseNumber" class="form-control" />
                <span asp-validation-for="SailingLicenseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RadioOperatorLicense" class="control-label"></label>
                <input asp-for="RadioOperatorLicense" class="form-control" />
                <span asp-validation-for="RadioOperatorLicense" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LicenseValidUntil" class="control-label"></label>
                <input asp-for="LicenseValidUntil" class="form-control" />
                <span asp-validation-for="LicenseValidUntil" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
